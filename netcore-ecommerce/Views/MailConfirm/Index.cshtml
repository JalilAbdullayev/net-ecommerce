@model UserConfirm
@{
    ViewData["Title"] = "Confirm Mail";
    Layout = "_AuthLayout";
}

<form class="form-horizontal form-material" method="POST" id="loginform">
    <h3 class="text-center m-b-20">
        Confirm Mail
    </h3>
    <div class="form-group">
        <h4>
            Your e-mail address: @ViewBag.Email
        </h4>
        <div class="col-xs-12">
            <input class="form-control" type="email" value="@ViewBag.Email" name="Mail" required placeholder="E-mail" asp-for="Mail"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input class="form-control" type="text" name="ConfirmCode" required placeholder="Confirmation Code" asp-for="ConfirmCode"/>
        </div>
    </div>
    <div class="form-group text-center">
        <div class="col-xs-12 p-b-20">
            <button class="btn w-100 btn-lg btn-info btn-rounded text-white" type="submit">
                Confirm
            </button>
        </div>
    </div>
</form>